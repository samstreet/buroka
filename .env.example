# Market Analysis System - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application Configuration
DEBUG=true
LOG_LEVEL=INFO
API_PORT=8000
FRONTEND_PORT=3000

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=market_analysis
POSTGRES_USER=trader
POSTGRES_PASSWORD=secure_password

# InfluxDB Configuration
INFLUXDB_HOST=localhost
INFLUXDB_PORT=8086
INFLUXDB_DATABASE=market_data
INFLUXDB_ORG=market_analysis
INFLUXDB_TOKEN=your_influxdb_token
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=admin_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PREFIX=market_

# External API Keys (obtain from respective providers)
ALPHA_VANTAGE_API_KEY=demo
POLYGON_API_KEY=your_polygon_api_key
IEX_CLOUD_API_KEY=your_iex_api_key
NEWS_API_KEY=your_news_api_key
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret

# JWT Configuration
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_TIME=86400

# Crypto Exchange API Keys
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key
COINBASE_API_KEY=your_coinbase_api_key
COINBASE_SECRET_KEY=your_coinbase_secret_key

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin

# Development Settings
RELOAD=true
HOT_RELOAD=true
TEST_DATABASE_URL=postgresql://trader:secure_password@localhost:5432/market_analysis_test

# Production Settings (set these in production environment)
# SSL_CERTIFICATE_PATH=/path/to/ssl/cert
# SSL_PRIVATE_KEY_PATH=/path/to/ssl/key
# DOMAIN_NAME=your-domain.com
# CORS_ORIGINS=https://your-domain.com,https://api.your-domain.com

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# Cache Settings
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# ML Model Settings
MODEL_UPDATE_INTERVAL=3600
MODEL_TRAINING_ENABLED=true
MODEL_ARTIFACT_PATH=./models

